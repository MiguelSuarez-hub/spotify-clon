---
import HomeIcon from '@/icons/Home.astro';
import LibraryIcon from '@/icons/Library.astro';
import Search from '@/icons/Search.astro';
import SideMenuCard from '@/components/SideMenuCard.astro';
import SideMenuItem from '@/components/SideMenuItem.astro';

import { playlists } from '@/lib/data';
---

<nav class="flex flex-col flex-1 gap-2">
  <div class="bg-zinc-900 p-2 rounded-lg">
    <ul>
      <SideMenuItem href='/' >
        <HomeIcon />
        Home
      </SideMenuItem>
      <SideMenuItem href='/' >
        <Search />
        Search
      </SideMenuItem>
    </ul>
  </div>
  <div class="bg-zinc-900 p-2 rounded-lg flex-1">
      <button class="flex gap-4 text-zinc-400 hover:text-zinc-100 items-center py-3 px-5 font-medium transition duration-300">
        <LibraryIcon />
        Tu biblioteca
      </button>
    <ul>
      {
        playlists.map(playlist => <SideMenuCard playlist={playlist}/>)
      }
    </ul>
  </div>
</nav>